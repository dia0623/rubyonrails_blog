<div class="alert alert-danger" role="alert"><strong>Notice!</strong> Only admin can write, edit and delete. Ask for access.</div>

<% @posts.each do |post| %>
    <div class="post">
        <a href = '/blog/show/<%= post.id %>'>
            <h1 class="post-title"><%= post.title %></h1>
        </a>
        <span class="post-data">
            <%= time_ago_in_words(post.created_at) %>
        </span>
    </div>
<% end %>
<a href = '/blog/new'>
    <button class="btn btn-default">write</button>
</a>